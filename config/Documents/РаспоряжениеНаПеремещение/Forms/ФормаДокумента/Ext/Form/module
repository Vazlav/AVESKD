
Процедура ПриОткрытии()
	
	Если ЭтоНовый() Тогда
		СозданВручную = Истина;
	КонецЕсли;
	
КонецПроцедуры

Процедура ПередЗаписью(Отказ, РежимЗаписи, РежимПроведения)
	
	Если РежимЗаписи = РежимЗаписиДокумента.Проведение Тогда
		
		Режим = РежимДиалогаВопрос.ДаНет;
		Ответ = Вопрос("В результате проведения документ будет выгружен в ЛК и будет отправлено письмо аптеке. Продолжить?", Режим, 0);
		Если Ответ = КодВозвратаДиалога.Нет Тогда
			Отказ = Истина;
		КонецЕсли;	
		
	КонецЕсли;
	
КонецПроцедуры
