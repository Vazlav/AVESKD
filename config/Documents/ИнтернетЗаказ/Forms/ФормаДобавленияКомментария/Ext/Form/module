
Процедура ОсновныеДействияФормыСохранить(Кнопка)
	                                  
	Если ЭлементыФормы.ПолеКомментария.КоличествоСтрок()=0 ТОгда
		ЭтаФорма.Закрыть();
	КонецЕсли;
	ТекДата=ТекущаяДата();

	
	
	КИЗакНабЗап=РегистрыСведений.КомментарииКИнтернетЗаказам.СоздатьНаборЗаписей();
	ОтбПоРег=КИЗакНабЗап.Отбор.Найти("Регистратор");
	ОтбПоРег.Установить(Документ,Истина);

	
	КИЗакНабЗап.Прочитать();
	
	
		
	КИЗакЗап=КИЗакНабЗап.Добавить();
	
	
	
	КИЗакЗап.Период=ТекДата;
	КИЗакЗап.ДатаКомментария=ТекДата;
	
	КИЗакЗап.Сотрудник=ПараметрыСеанса.ТекущийСотр;
	КИЗакЗап.Регистратор=Документ;
	КИЗакЗап.Активность=Истина;
	КИЗакЗап.Комментарий=ЭлементыФормы.ПолеКомментария.ПолучитьТекст();
	
	КИЗакНабЗап.Записать();
	
	ЭтаФорма.Закрыть();
	
КонецПроцедуры
