
Процедура ОсновныеДействияФормыСохранить(Кнопка)
	РеквТекстЗапроса=ЭлементыФормы.ТекстЗапроса.ПолучитьТекст();
	Оповестить("ТекстЗапросаИзменен",Новый Структура("СтрокаНастроек,ТекстЗапроса",СтрокаНастроек,РеквТекстЗапроса));
	ЭтаФорма.Закрыть();
КонецПроцедуры       


Процедура ПриОткрытии()
	// Вставить содержимое обработчика.
	ЭлементыФормы.ТекстЗапроса.УстановитьТекст(РеквТекстЗапроса);
КонецПроцедуры

Процедура КоманднаяПанель1ОткрытьЗапросВКонсоли(Кнопка)
	Консоль=Отчеты.GtGsКонсольЗапросов.Создать();	
	ФК=Консоль.ПолучитьФорму("Форма");
	ФК.Открыть();
	
	ФК.ЭлементыФормы.ТекстЗапроса.УстановитьТекст(ЭлементыФормы.ТекстЗапроса.ПолучитьТекст());
	
	
	
КонецПроцедуры
