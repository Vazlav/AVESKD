
Процедура РасписаниеПредставлениеНачалоВыбора(Элемент, СтандартнаяОбработка)
	
	Знч = РасписаниеХЗ.Получить();
	Если ТипЗнч(Знч) = Тип("РасписаниеРегламентногоЗадания") Тогда
		Расписание = Знч;
	Иначе
		Расписание = Новый РасписаниеРегламентногоЗадания();
	КонецЕсли;
	
	ДиалогРасписания = Новый ДиалогРасписанияРегламентногоЗадания(Расписание);
	Если ДиалогРасписания.ОткрытьМодально() Тогда
		РасписаниеХЗ = Новый ХранилищеЗначения(ДиалогРасписания.Расписание, Новый СжатиеДанных(9));
		РасписаниеПредставление = ПредставлениеРасписания(ДиалогРасписания.Расписание);
	КонецЕсли;
	
КонецПроцедуры

Процедура РасписаниеПредставлениеОчистка(Элемент, СтандартнаяОбработка)
	
	РасписаниеХЗ = Неопределено;
	РасписаниеПредставление = "";
	
КонецПроцедуры
