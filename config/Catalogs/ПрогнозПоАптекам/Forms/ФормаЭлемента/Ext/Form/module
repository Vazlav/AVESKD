
Процедура КоманднаяПанель1ЗаполнитьСписокАптек(Кнопка)
	
	Если Показатели.Количество() > 0 Тогда
		
		Режим = РежимДиалогаВопрос.ДаНет;
		Ответ = Вопрос("Табличная часть будет очищена. Продолжить?", Режим, 0);
		Если Ответ = КодВозвратаДиалога.Нет Тогда
			Возврат;
		КонецЕсли;
		
	КонецЕсли;
	
	Показатели.Очистить();	
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	МестаХранения.Ссылка КАК Аптека,
	|	МестаХранения.Бренд.ВремяНаОбслуживание КАК ВремяНаОбслуживание
	|ИЗ
	|	Справочник.МестаХранения КАК МестаХранения
	|ГДЕ
	|	НЕ МестаХранения.ЭтоГруппа
	|	И НЕ МестаХранения.ПометкаУдаления";
	
	РезультатЗапроса = Запрос.Выполнить();

	Выборка = РезультатЗапроса.Выбрать();

	Пока Выборка.Следующий() Цикл
		
		НовСтр = Показатели.Добавить();
		ЗаполнитьЗначенияСвойств(НовСтр, Выборка);
		
	КонецЦикла;
	
КонецПроцедуры

Процедура МесяцПриИзменении(Элемент)
	
	Если День(Месяц) > 1 Тогда
		Месяц = НачалоМесяца(Месяц);
	КонецЕсли;
	
КонецПроцедуры
