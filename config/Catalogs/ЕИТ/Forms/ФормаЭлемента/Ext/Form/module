
Процедура Кнопка1Нажатие(Элемент)
	// Вставить содержимое обработчика.
	СЗ=Новый СписокЗначений;
	ГенН=ОМ1_ГенераторНаименования (Владелец.Бренд,Владелец.ТорговоеНаименование,Владелец.ЛекФорма,Владелец.Дополнение,Владелец.Концентрация ,Владелец.ПисатьТире, Владелец.Дозировка, КолвоВУпаковке,Владелец.Артикул);
	СЗ.Добавить(ГенН,"Генератор: "+ГенН);
	СЗ.Добавить(Владелец.Наименование,"Наименование: "+Владелец.Наименование);
	
	ВыбЗн=СЗ.ВыбратьЭлемент("Наименование?",);
	
	Попытка
		НаименованиеТовара=Врег(ВыбЗн.Значение);
		Наименование=ЕдИзм;
	иСКЛЮЧЕНИЕ
	кОНЕЦпОПЫТКИ;
КонецПроцедуры

Процедура Кнопка2Нажатие(Элемент)
	// Вставить содержимое обработчика.
	Префикс=Константы.Первые2СимволаВШКНеЖНВЛС.Получить();
	ШтрихкодВн=ОМ1_ШК_СПрефиксом(Префикс,Код);
КонецПроцедуры

Процедура ПередЗаписью(Отказ)
	// Вставить содержимое обработчика.
	Наименование=ЕдИзм;
	
	Кнопка2Нажатие("");
	
	ПРЕДУПР=лОЖЬ;	
	Если ЕдИзм.Пустая() Тогда
		ПРедупреждение("Не заполнена единица измерения!");
		Предупр=Истина;
	КонецЕсли;
	
	Если СокрЛП(ШтрихкодВн)="" ТОгда
		Кнопка2Нажатие("");
	КонецЕсли;	
	
	
	Отказ=Предупр;
КонецПроцедуры


Процедура ПередОткрытием(Отказ, СтандартнаяОбработка)
	//-------- Запрет на ввод еит при незаписанном хозяине --------------
	Если ЭтоНовый() ТОгда
		Если ЭтотОбъект.Владелец.Пустая() ТОгда
			Предупреждение("Не записан владелец !");
			Отказ=Истина;
		КонецЕсли;
	КонецЕсли;	
КонецПроцедуры

