
Процедура ПриОткрытии()
	
	ТекВремя=ТекущаяДата();
	
	Если ТекВремя<Дата("20130319000000") Тогда   // начинаем применять ограничение с 19-03-2013
		ЭлементыФормы.Надпись2.Заголовок="До 19 марта 2013г запуск универсального отчета разрешен, но начиная с 19 числа в это время запуск станет невозможен!";
		Возврат;
	КонецЕсли;	

	
	
	ТекЧас=Час(ТекВремя);
	
	Если ТекЧас<18 и ТекЧас >8 Тогда
		ЭлементыФормы.Надпись2.Заголовок="Сейчас запуск универсального отчета невозможен";
	Иначе
		ЭлементыФормы.Надпись2.Заголовок="Сейчас запуск универсального отчета разрешен";
	КонецЕсли;	
	
	
	
	
КонецПроцедуры
