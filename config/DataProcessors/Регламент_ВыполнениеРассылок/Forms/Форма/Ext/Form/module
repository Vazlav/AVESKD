
Процедура ПриОткрытии()
	
	Если ПараметрыСеанса.ТекущийСотр.Наименование = "Технерядов Сергей"
		Или РольДоступна("супер_АДМИНИСТРАТОР") Тогда		
		ДоступностьКнопок = Истина;		
	Иначе
		ДоступностьКнопок = Ложь;		
	КонецЕсли;
	
	Для Каждого ТекЭлемент Из ЭлементыФормы Цикл	
		ТекЭлемент.Доступность = ДоступностьКнопок;	
	КонецЦикла;
	
	// {Для запуска через планировщик
	АвтоматическийЗапуск = Истина;
	Если ПараметрЗапуска = "auto_1" Тогда		
		РассылкаОтчетаПоКонцернам();
	ИначеЕсли ПараметрЗапуска = "auto_2" Тогда
		РассылкаРеестраНакладныхGDPДляСантенс();		
	ИначеЕсли ПараметрЗапуска = "auto_3" Тогда
		РассылкаПланаПоступленияТовараНаСклад();
	ИначеЕсли ПараметрЗапуска = "auto_4" Тогда
		//РассылкаСтатусовПоДефектурнымЗаявкам();
	ИначеЕсли ПараметрЗапуска = "auto_5" Тогда
	    РассылкаСпискаНевыгруженныхЗаказов();
	ИначеЕсли ПараметрЗапуска = "auto_6" Тогда	
		РассылкаМониторингаРежимовРаботыАптек();
	ИначеЕсли ПараметрЗапуска = "Рассылки_КонтрольНеоприходованныхНакладных" Тогда	
		КонтрольНеоприходованныхНакладных();
	ИначеЕсли ПараметрЗапуска = "Рассылки_КонтрольНеоприходованныхНакладных_ДБЕ" Тогда	
		КонтрольНеоприходованныхНакладныхДляДБЕ();
	ИначеЕсли ПараметрЗапуска = "Рассылки_ИтогиПоВыручке" Тогда	
		РассылкаИтоговПоВыручке();
	ИначеЕсли ПараметрЗапуска = "Рассылки_КонтрольБлокировкиСТМ" Тогда	
		КонтрольБлокировкиСТМ();		
	Иначе
		АвтоматическийЗапуск = Ложь;
	КонецЕсли;
	
	Если АвтоматическийЗапуск Тогда
		ЗавершитьРаботуСистемы(Ложь);
	КонецЕсли; // ...}
	
КонецПроцедуры

Процедура ОтчетПоКонцернамНажатие(Элемент) 	
	РассылкаОтчетаПоКонцернам(); 	
КонецПроцедуры

Процедура РеестрНакладныхGDPДляСантенсНажатие(Элемент)
	РассылкаРеестраНакладныхGDPДляСантенс();
КонецПроцедуры

Процедура ПланПоступленийТовараНаСкладНажатие(Элемент)
	РассылкаПланаПоступленияТовараНаСклад();
КонецПроцедуры

Процедура СтатусыПоДефектурнымЗаявкамНажатие(Элемент)
	//РассылкаСтатусовПоДефектурнымЗаявкам();
КонецПроцедуры

Процедура НевыгруженныеЗаказыПоставщикуНажатие(Элемент)
	РассылкаСпискаНевыгруженныхЗаказов();
КонецПроцедуры

Процедура МониторингРежимовРаботыАптекНажатие(Элемент)
	РассылкаМониторингаРежимовРаботыАптек();
КонецПроцедуры

Процедура НеоприходованныеНакладныеНажатие(Элемент)
	КонтрольНеоприходованныхНакладных();
КонецПроцедуры

Процедура НеоприходованныеНакладныеДляДБЕНажатие(Элемент)
	КонтрольНеоприходованныхНакладныхДляДБЕ();
КонецПроцедуры

Процедура ИтогиПоВыручкеНажатие(Элемент)
	РассылкаИтоговПоВыручке();
КонецПроцедуры

Процедура КонтрольБлокировкиСТМНажатие(Элемент)
	КонтрольБлокировкиСТМ();
КонецПроцедуры
