Процедура ПриОткрытии()
	
	// Если копироание
	Если  ПараметрОбъектКопирования <> Неопределено Тогда
	    Период = ТекущаяДата();  
		Ответственный = "";
		ДатаЗаписи = "";
	КонецЕсли; 
	Если КодТовара>0 Тогда
		Товар = РегистрыСведений.СтопЛист.ПолучитьТоварПоКоду(КодТовара);
		Производитель = Товар.Производитель;
	КонецЕсли;	
КонецПроцедуры

Процедура КодТовараПриИзменении(Элемент)
	
	Если Элемент.Значение>0 Тогда
		Товар = РегистрыСведений.СтопЛист.ПолучитьТоварПоКоду(Элемент.Значение);
		Производитель = Товар.Производитель;
	КонецЕсли;
	
КонецПроцедуры

Процедура ТоварПриИзменении(Элемент)
	
	КодТовара = Элемент.Значение.Код;
	Производитель = Элемент.Значение.Производитель;
	
КонецПроцедуры

